% Separate each different emotion type.
function [imSetAnger, imSetDisgust, imSetFear, imSetHappy, imSetSad, imSetSurprise, imSetNeutral] = separate(tr_images, tr_label)

anger = zeros(0, 1);
disgust = zeros(0, 1);
fear = zeros(0, 1);
happy = zeros(0, 1);
sad = zeros(0, 1);
surprise = zeros(0, 1);
neutral = zeros(0, 1);

for i=1:size(tr_label, 1)
    if (tr_label(i, 1) == 1)
        anger = [i ;anger];
    elseif (tr_label(i, 1) == 2)
        disgust = [i ;disgust]; 
    elseif (tr_label(i, 1) == 3)
        fear = [i ;fear];
    elseif (tr_label(i, 1) == 4)
        happy = [i ;happy];
    elseif (tr_label(i, 1) == 5)
        sad = [i ;sad]; 
    elseif (tr_label(i, 1) == 6)
        surprise = [i ;surprise];
    else
        neutral = [i ;neutral];
    end
end

imSetAnger = zeros(32, 32, 0);
imSetDisgust = zeros(32, 32, 0);
imSetFear = zeros(32, 32, 0);
imSetHappy = zeros(32, 32, 0);
imSetSad = zeros(32, 32, 0);
imSetSurprise = zeros(32, 32, 0);
imSetNeutral = zeros(32, 32, 0);

for i=1:size(tr_images, 3)
    if (any(anger == i))
        imSetAnger = cat(3, imSetAnger, tr_images(:,:,i));
    elseif (any(disgust == i))
        imSetDisgust = cat(3, imSetDisgust, tr_images(:,:,i));
    elseif (any(fear == i))
        imSetFear = cat(3, imSetFear, tr_images(:,:,i));
    elseif (any(happy == i))
        imSetHappy = cat(3, imSetHappy, tr_images(:,:,i));
    elseif (any(sad == i))
        imSetSad = cat(3, imSetSad, tr_images(:,:,i));
    elseif (any(surprise == i))
        imSetSurprise = cat(3, imSetSurprise, tr_images(:,:,i));
    else
        imSetNeutral = cat(3, imSetNeutral, tr_images(:,:,i));
    end
end

end